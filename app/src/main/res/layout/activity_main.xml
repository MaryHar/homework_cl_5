<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#C8C8C8"
    android:layout_gravity="fill"
    android:layout_margin="0pt"
    android:layout_weight="1"
    android:orientation="vertical">


    <EditText
        android:id="@+id/etShowNumber"
        android:layout_width="416dp"
        android:layout_height="239dp"
        android:layout_weight="1"
        android:background="#1C1B1B"
        android:gravity="right|bottom"
        android:inputType="textPersonName"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvSec"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#1C1B1B"
        android:gravity="bottom"
        android:maxLines="1"
        android:padding="10dp"
        android:paddingTop="30dp"
        android:text=""
        android:textAlignment="viewEnd"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="RtlCompat" />
    <Button
        android:id="@+id/button1"
        android:backgroundTint="#19BDE6"
        android:layout_width="42pt"
        android:layout_height="42pt"
        android:layout_weight="1"
        android:text="c"
        android:textSize="32dp"
        android:textStyle="bold"
        android:layout_marginRight="1pt" />
    <Button
        android:id="@+id/button2"
        android:backgroundTint="#19BDE6"
        android:layout_width="42pt"
        android:layout_height="42pt"
        android:layout_weight="1"
        android:text="x"
        android:textStyle="bold"
        android:textSize="24dp"
        android:layout_marginRight="1pt" />
    <Button
        android:id="@+id/button3"
        android:backgroundTint="#19BDE6"
        android:layout_width="42pt"
        android:layout_height="42pt"
        android:layout_weight="1"
        android:text="âˆš"
        android:textSize="32dp"
        android:textStyle="bold"
        android:layout_marginRight="1pt" />

    <Button
        android:id="@+id/button4"
        android:backgroundTint="#0348C1"
        android:layout_width="42pt"
        android:layout_height="42pt"
        android:layout_weight="1"
        android:textStyle="bold"
        android:text="/"
        android:textSize="32dp" />

    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/flow2"
        android:layout_width="414dp"
        android:layout_height="83dp"
        android:layout_marginTop="4dp"
        app:constraint_referenced_ids="button1,button2,button3,button4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etShowNumber" />

    <Button
        android:id="@+id/b7"
        android:backgroundTint="#19BDE6"
        android:layout_width="42pt"
        android:layout_height="42pt"
        android:layout_weight="1"
        android:textStyle="bold"
        android:text="7"
        android:textColor="@color/black"
        android:textSize="32dp"
        android:layout_marginRight="1pt" />

    <Button
        android:id="@+id/b8"
        android:backgroundTint="#19BDE6"
        android:layout_width="42pt"
        android:layout_height="42pt"
        android:layout_weight="1"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="8"
        android:textSize="32dp"
        android:layout_marginRight="1pt" />


    <Button
        android:id="@+id/b9"
        android:backgroundTint="#19BDE6"
        android:layout_width="42pt"
        android:layout_height="42pt"
        android:layout_weight="1"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="9"
        android:textSize="32dp"
        android:layout_marginRight="1pt" />

    <Button
        android:id="@+id/button8"
        android:backgroundTint="#0348C1"
        android:layout_width="42pt"
        android:layout_height="42pt"
        android:layout_weight="1"
        android:text="x"
        android:textSize="20dp"        />

    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/flow3"
        android:layout_width="414dp"
        android:layout_height="80dp"
        android:layout_marginTop="6dp"
        app:constraint_referenced_ids="b7,b8,b9,button8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/flow2" />

    <Button
        android:id="@+id/b4"
        android:backgroundTint="#19BDE6"
        android:layout_width="42pt"
        android:layout_height="42pt"
        android:layout_weight="1"
        android:textColor="@color/black"
        android:text="4"
        android:textSize="32dp"
        android:layout_marginRight="1pt" />

    <Button
        android:id="@+id/button10"
        android:backgroundTint="#19BDE6"
        android:layout_width="42pt"
        android:layout_height="42pt"
        android:layout_weight="1"
        android:textColor="@color/black"
        android:text="5"
        android:textSize="32dp"
        android:layout_marginRight="1pt" />

    <Button
        android:id="@+id/b6"
        android:backgroundTint="#19BDE6"
        android:layout_width="42pt"
        android:layout_height="42pt"
        android:layout_weight="1"
        android:textColor="@color/black"
        android:text="6"
        android:textSize="32dp"
        android:layout_marginRight="1pt" />

    <Button
        android:id="@+id/button12"
        android:backgroundTint="#0348C1"
        android:layout_width="42pt"
        android:layout_height="42pt"
        android:layout_weight="1"
        android:text="-"
        android:textSize="32dp" />

    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/flow6"
        android:layout_width="414dp"
        android:layout_height="80dp"
        android:layout_marginTop="8dp"
        app:constraint_referenced_ids="b4,button10,b6,button12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/flow3" />

    <Button
        android:id="@+id/b1"
        android:backgroundTint="#19BDE6"
        android:layout_width="42pt"
        android:layout_height="42pt"
        android:layout_weight="1"
        android:textColor="@color/black"
        android:text="1"
        android:textSize="32dp"
        android:layout_marginRight="1pt" />

    <Button
        android:id="@+id/b2"
        android:backgroundTint="#19BDE6"
        android:layout_width="42pt"
        android:layout_height="42pt"
        android:layout_weight="1"
        android:textColor="@color/black"
        android:text="2"
        android:textSize="32dp"
        android:layout_marginRight="1pt" />

    <Button
        android:id="@+id/b3"
        android:backgroundTint="#19BDE6"
        android:layout_width="42pt"
        android:layout_height="42pt"
        android:layout_weight="1"
        android:textColor="@color/black"
        android:text="3"
        android:textSize="32dp"
        android:layout_marginRight="1pt" />

    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/flow4"
        android:layout_width="310dp"
        android:layout_height="80dp"
        android:layout_marginStart="1dp"
        app:constraint_referenced_ids="b1,b2,b3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button10" />

    <Button
        android:id="@+id/button16"
        android:backgroundTint="#19BDE6"
        android:layout_width="42pt"
        android:layout_height="42pt"
        android:layout_weight="1"
        android:textColor="@color/black"
        android:text="."
        android:textSize="48dp"
        android:layout_marginRight="1pt" />

    <Button
        android:id="@+id/b0"
        android:backgroundTint="#19BDE6"
        android:layout_width="42pt"
        android:layout_height="42pt"
        android:layout_weight="1"
        android:textColor="@color/black"
        android:text="0"
        android:textSize="32dp"
        android:layout_marginRight="1pt" />

    <Button
        android:id="@+id/button18"
        android:backgroundTint="#19BDE6"
        android:layout_width="42pt"
        android:layout_height="42pt"
        android:layout_weight="1"
        android:textColor="@color/black"
        android:text="="
        android:textSize="32dp"
        android:layout_marginRight="1pt" />

    <androidx.constraintlayout.helper.widget.Flow
        android:layout_width="310dp"
        android:layout_height="80dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="8dp"
        app:constraint_referenced_ids="button16,b0,button18"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/flow4" />

    <Button
        android:id="@+id/button19"
        android:layout_width="42pt"
        android:layout_height="180dp"
        android:layout_marginTop="2dp"
        android:layout_weight="1"
        android:backgroundTint="#0348C1"
        android:text="+"
        android:textSize="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/b6"
        app:layout_constraintTop_toBottomOf="@+id/flow6" />
</androidx.constraintlayout.widget.ConstraintLayout>